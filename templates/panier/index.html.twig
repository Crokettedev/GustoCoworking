{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container">
    <div class="card card-body text-center" id="card-reservation-index">
        <div class="row">
            <div class="col-sm-6">
                <div class="card" id="card-reser">
                    <div class="card-header" id="card-reser">
                        Panier
                    </div>
                    <div class="card-body">
                        {% set totalPrice = 0 %}
                        {% for article in app.user.paniers %}
                            <div class="modal-header">
                                <h5 class="modal-title">{{ article.idfood.nom }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">{{ article.idfood.prix }}€</span>
                                    {% set totalPrice = totalPrice + (article.idfood.prix) %}

                                </button>
                            </div>
                            <div class="modal-footer">

                                    <a href="{{ path('panier.delete' , {id: article.idfood.id}) }}"><button type="submit" class="btn btn-primary" id="btn">Supprimer</button></a>

                            </div>
                        <hr class="my-4">
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card" id="card-reser">
                    <div class="card-header" id="card-reser">
                        Récapitulatif
                    </div>
                    <div class="card-body">
                        <div class="modal-header">
                            <h5 class="modal-title">Total</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">{{ totalPrice }}€</span>
                            </button>
                        </div>
                        <button type="button" class="btn btn-primary btn-lg btn-block" id="btn">Paiement</button>
                        <button type="button" class="btn btn-primary btn-lg btn-block" id="btn">Paypal</button>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
